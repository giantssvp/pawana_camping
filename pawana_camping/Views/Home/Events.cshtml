@{
    ViewBag.Title = "Events";
}

@Html.Partial("menu1")

@{
    var results = ViewBag.list;
    int cnt = ViewBag.total;
}

<div class="testimonials module">
    <div class="container">
        <!-- TITLE -->
        <div class="test-top">
            <div class="sp-testimonials-title">
                <h3 class=" tittle wow fadeInUp" data-wow-delay="1s" data-wow-duration="0.5s">Events</h3>
            </div>
            <div class="sp-testimonials">
                <div class="sp">
                @for (var i = 0; i < cnt; i++)
                {
                    <blockquote>@results[0][i]</blockquote>
                    <p><strong>@results[1][i]</strong>@results[2][i]</p>
                    <br /><br /><br />

                    <div class="clearfix"> </div>
                }
                </div>
                
                <div class="grid_3 grid_5 wow fadeInRight animated" data-wow-delay=".5s" align="center">
                    <nav>
                        <ul class="pagination pagination-lg">
                            <li><a href="@Url.Action("F_Events", "Home", new { data = 0})" aria-label="Previous"><span aria-hidden="true"><<</span></a></li>
                            <li><a href="@Url.Action("P_Events", "Home", new { data = 1 })"><</a></li>
                            <li><a href="@Url.Action("N_Events", "Home", new { data = 1 })">></a></li>
                            <li><a href="@Url.Action("L_Events", "Home", new { data = 1 })" aria-label="Next"><span aria-hidden="true">>></span></a></li>
                        </ul>
                    </nav>
                    <div class="clearfix"> </div>
                </div>

            </div>
        </div>
        <!-- /TITLE -->
    </div>
</div>